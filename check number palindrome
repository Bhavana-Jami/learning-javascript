let number = 121;
let rev = 0;
let last_numb = 0;
let temp = number;
while(number > 0){
    last_numb = number % 10;
    number = Math.floor(number / 10);
    rev = rev * 10 + last_numb;    
}
if(temp == rev)
    console.log("the number is a palindrome");
else
    console.log("the number is not a palindrome");
